<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:listViewAttr="http://schemas.android.com/apk/res/com.example.daishu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/home">
    <TextView 
        android:layout_width="match_parent"	  
        android:layout_height="40sp"
        android:text="袋鼠"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@color/black"
        android:textColor="@color/whitesmoke"/>

	<FrameLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >
		<LinearLayout 
		    android:id="@+id/liner_view"
		    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"/>
		<LinearLayout 
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="125sp"
	    	android:orientation="horizontal"
	    	android:layout_gravity="center_horizontal">
			<ImageView
			    android:id="@+id/dot1"  
			    android:src="@drawable/dot1" 
		        android:layout_width="20sp"  
		        android:layout_height="20sp"
		        android:padding="3sp"/>
			<ImageView 
			    android:id="@+id/dot2"  
			    android:src="@drawable/dot1" 
		        android:layout_width="20sp"  
		        android:layout_height="20sp"
		        android:padding="3sp"/>
		</LinearLayout>
	</FrameLayout>
	<TableLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:stretchColumns="0,1,2,3">
	    <TableRow>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"
	    		android:gravity="center">
	        <ImageView
	            android:src="@drawable/shuo"
	            android:layout_width="40sp"
	    		android:layout_height="40sp"/>
	        <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="说说"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"
	    		android:gravity="center">
	        <ImageView 
	            android:src="@drawable/cet4"
	            android:layout_width="40sp"
	    		android:layout_height="40sp"/>
	        <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="四级报名"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"
	    		android:gravity="center">
	        <ImageView 
	            android:src="@drawable/cet6"
	            android:layout_width="40sp"
	    		android:layout_height="40sp"/>
	        <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="六级报名"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"
	    		android:gravity="center">
	        <ImageView 
	            android:src="@drawable/zuowen"
	            android:layout_width="40sp"
	    		android:layout_height="40sp"/>
	        <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="作文预测"/>
	        </LinearLayout>
	    </TableRow>
	    <TableRow>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"
	    		android:gravity="center">
	        <ImageView 
	            android:src="@drawable/kuaidi"
	            android:layout_width="40sp"
	    		android:layout_height="40sp"/>
	        <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="取快递"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"
	    		android:gravity="center">
	        <ImageView 
	            android:src="@drawable/daigou"
	            android:layout_width="40sp"
	    		android:layout_height="40sp"/>
	        <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="代购"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"
	    		android:gravity="center">
	        <ImageView 
	            android:src="@drawable/ppt"
	            android:layout_width="40sp"
	    		android:layout_height="40sp"/>
	        <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="做PPT"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"
	    		android:gravity="center">
	        <ImageView 
	            android:src="@drawable/paper"
	            android:layout_width="40sp"
	    		android:layout_height="40sp"/>
	        <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="写演讲稿"/>
	        </LinearLayout>
	    </TableRow>
	    
	</TableLayout>
   	<RelativeLayout 
   	    android:layout_width="match_parent"
   		android:layout_height="match_parent">
	    <TextView
		    android:id="@+id/t"
		    android:layout_width="match_parent"
	   		android:layout_height="53sp"
	   		android:layout_alignParentBottom="true"/>  
   	    <Utils.MyListView
		    android:id="@+id/lv"
	   		android:layout_width="match_parent"
	   		android:layout_height="wrap_content"
	   		android:layout_above="@id/t"
	   		android:layout_alignParentTop="true"/>
   	</RelativeLayout>
</LinearLayout>