<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/submit">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:text="发单"
        android:background="@color/blue"
        android:textColor="@color/whitesmoke"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="选取任务："/>
 	<LinearLayout 
 	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:padding="10sp">
 	    <LinearLayout 
	 	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_weight="1">
 	    	<ImageView 
 	    	    android:src="@drawable/kuaidi"
 	    	    android:layout_width="40sp"
	    		android:layout_height="30sp"/>
 	    	<TextView 
 	    	    android:text="帮取快递"
 	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center"/>
 		</LinearLayout>
 	    <LinearLayout 
	 	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_weight="1">
 	    	<ImageView 
 	    	    android:src="@drawable/zuowen"
 	    	    android:layout_width="40sp"
	    		android:layout_height="30sp"/>
 	    	<TextView 
 	    	    android:text="作文预测"
 	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center"/>
 		</LinearLayout>
 	</LinearLayout>
 	<LinearLayout 
 	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:padding="10sp">
 	    <LinearLayout 
	 	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_weight="1">
 	    	<ImageView 
 	    	    android:src="@drawable/ppt"
 	    	    android:layout_width="40sp"
	    		android:layout_height="30sp"/>
 	    	<TextView 
 	    	    android:text="帮做PPT"
 	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center"/>
 		</LinearLayout>
 	    <LinearLayout 
	 	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_weight="1">
 	    	<ImageView 
 	    	    android:src="@drawable/cet6"
 	    	    android:layout_width="40sp"
	    		android:layout_height="30sp"/>
 	    	<TextView 
 	    	    android:text="六级报名"
 	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center"/>
 		</LinearLayout>
 	</LinearLayout>
 	<LinearLayout 
 	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:padding="10sp">
 	    <LinearLayout 
	 	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_weight="1">
 	    	<ImageView 
 	    	    android:src="@drawable/paper"
 	    	    android:layout_width="40sp"
	    		android:layout_height="30sp"/>
 	    	<TextView 
 	    	    android:text="写演讲稿"
 	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center"/>
 		</LinearLayout>
 	    <LinearLayout 
	 	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_weight="1">
 	    	<ImageView 
 	    	    android:src="@drawable/cet4"
 	    	    android:layout_width="40sp"
	    		android:layout_height="30sp"/>
 	    	<TextView 
 	    	    android:text="四级报名"
 	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center"/>
 		</LinearLayout>
 	</LinearLayout>
 	<TextView 
 	    	    android:layout_width="fill_parent"
	    		android:layout_height="10sp"
	    		android:background="@color/lightgrey"/>
 	<TextView 
 	    android:layout_margin="10sp"
 	    android:text="具体任务"	
 	    android:textColor="@color/darkblue"
    	android:layout_width="150sp"
   		android:layout_height="30sp"
   		android:background="@drawable/corner"
   		android:layout_gravity="center"
   		android:gravity="center"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
 	    android:layout_height="match_parent">
 	    <TextView
		    android:id="@+id/t"
		    android:layout_width="match_parent"
	   		android:layout_height="53sp"
	   		android:layout_alignParentBottom="true"/>
		<ScrollView
	 	    android:id="@+id/list"
	 	    android:layout_width="match_parent"
	 	    android:layout_height="wrap_content"
	 	    android:layout_above="@id/t">
	 	    <LinearLayout 
	 	        android:id="@+id/liner"
	 	        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="vertical">
	 	        <include
	 	            layout="@layout/submitform"
	 	            android:focusableInTouchMode="true" />
	 	        <Button
	 	            android:id="@+id/next"
	 	            android:layout_gravity="center_horizontal"
	 	        	android:layout_width="match_parent"
		    		android:layout_height="wrap_content"
		    		android:text="发布"/>
	 	    </LinearLayout>
	 	</ScrollView>
	</RelativeLayout>
</LinearLayout>