<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/form" >
    <TextView 
 	    android:padding="5sp"
 	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_marginLeft="8sp"
   		android:text="任务详细描述："
   		android:textColor="@color/darkblue"
   		android:background="@drawable/corner"/>

 	<EditText
 	    android:padding="5sp"
 	    android:id="@+id/request"
 	    android:layout_margin="8sp"
 	    android:layout_width="match_parent"
 	    android:layout_height="80sp"
 	    android:background="@drawable/corner"
 	    android:hint="找同学[带午饭],[取快递],[带东西]，同学你要尽量说的详细一点儿哦！包括[送达时间]"
 	    android:textSize="15sp" />
 	<TextView 
 	    android:padding="5sp"
 	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_marginLeft="8sp"
   		android:text="个人信息："
   		android:textColor="@color/darkblue"
   		android:background="@drawable/corner"/>
 	<LinearLayout 
 	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:orientation="horizontal">
 	    <TextView 
	 	    android:padding="5sp"
	 	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_marginTop="8sp"
	   		android:layout_marginLeft="8sp"
	   		android:text="收货地址:"
	   		android:textColor="@color/darkblue"
	   		android:background="@drawable/corner"/>
 	    <EditText
	 	    android:padding="5sp"
	 	    android:id="@+id/address"
	 	    android:layout_marginTop="8sp"
	 	    android:layout_marginRight="8sp"
	 	    android:layout_width="match_parent"
	 	    android:layout_height="wrap_content"
	 	    android:background="@drawable/corner"
	 	    android:hint="想想给你送到什么地方"
	 	    android:textSize="15sp" 
	 	    android:singleLine="true"/>
 	</LinearLayout>
 	<LinearLayout 
 	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:orientation="horizontal">
 	    <TextView 
	 	    android:padding="5sp"
	 	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_marginTop="8sp"
	   		android:layout_marginLeft="8sp"
	   		android:text="送达时间:"
	   		android:textColor="@color/darkblue"
	   		android:background="@drawable/corner"/>
 	    <Spinner 
 	        android:id="@+id/delivery_time"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:entries="@array/delivery_time"
 	        android:layout_marginTop="8sp"
	   		android:padding="5sp"
	   		android:background="@drawable/corner"/>
 	</LinearLayout>
 	<LinearLayout 
 	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:orientation="horizontal">
 	    <TextView 
	 	    android:padding="5sp"
	 	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_marginTop="8sp"
	   		android:layout_marginLeft="8sp"
	   		android:text="联系电话:"
	   		android:textColor="@color/darkblue"
	   		android:background="@drawable/corner"/>

 	    <EditText
 	        android:id="@+id/tel"
 	        android:layout_width="match_parent"
 	        android:layout_height="wrap_content"
 	        android:layout_marginRight="8sp"
 	        android:layout_marginTop="8sp"
 	        android:background="@drawable/corner"
 	        android:hint="对方能联系到你的电话"
 	        android:inputType="phone"
 	        android:padding="5sp"
 	        android:singleLine="true"
 	        android:textSize="15sp" />

 	</LinearLayout>
 	<LinearLayout 
 	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:orientation="horizontal">
 	    <TextView 
	 	    android:padding="5sp"
	 	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_marginTop="8sp"
	   		android:layout_marginLeft="8sp"
	   		android:text="答谢报酬:"
	   		android:textColor="@color/darkblue"
	   		android:background="@drawable/corner"/>
 	    <EditText
 	        android:id="@+id/reward"
 	        android:layout_width="match_parent"
 	        android:layout_height="wrap_content"
 	        android:layout_marginRight="8sp"
 	        android:layout_marginTop="8sp"
 	        android:background="@drawable/corner"
 	        android:hint="不少于2元"
 	        android:inputType="number"
 	        android:padding="5sp"
 	        android:singleLine="true"
 	        android:textSize="15sp" />
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="8sp"
		    android:text="元"
		    android:textSize="15sp" />
 	</LinearLayout>
</LinearLayout>
